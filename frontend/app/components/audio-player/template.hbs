{{! template-lint-configure no-invalid-interactive false }}
<button
  data-test-play-audio-button
  class="bg-blue-500 text-white font-bold py-2 px-4 rounded-full
    {{if this.isPlaying "opacity-50" "hover:bg-blue-700"}}"
  onclick={{action this.playAudio}}
  disabled={{this.isPlaying}}
  {{ref "playButton" this}}
>
  {{if this.isPlaying "🔊" "🔈"}}
  Прослушать
</button>