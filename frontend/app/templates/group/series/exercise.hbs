<ModalDialog
  animatable={{true}}
  @translucentOverlay={{true}}
  @containerClass="ember-modal-dialog-exercise"
>
  {{#if (eq this.target.currentRouteName "group.series.exercise.task")}}
    <div class="flex items-center justify-between">
      <div>
        <FaIcon @icon="chevron-left" />
        <LinkTo @route="group.series" @model={{this.model.series}}>
          Назад
        </LinkTo>
      </div>
      <div id="exercise-steps-slot">
      </div>
      <Timer @paused={{true}} />
    </div>
  {{/if}}
  <div class="exercise-container">
    {{#if (not this.model.hideExerciseNavigation)}}
      <ExerciseNavigation
        class="exercise-navigation"
        @tasks={{this.model.tasks}}
      />
    {{/if}}

    {{#if
      (and this.exerciseIsCompletedInCurrentCycle (not this.showExerciseStats))
    }}
      <AnswerCorrectnessWidget
        @isCorrect={{true}}
        {{did-insert this.greedOnCompletedExercise}}
      />
    {{else if this.showExerciseStats}}
      <ExerciseStats
        @stats={{this.model.stats}}
        {{did-insert this.afterCompleted}}
      />
    {{else}}
      {{outlet}}
    {{/if}}
  </div>
</ModalDialog>